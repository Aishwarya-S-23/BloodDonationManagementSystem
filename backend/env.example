# Copy this file to backend/.env (create it manually) OR set these in your shell.

PORT=5000
NODE_ENV=development

# MongoDB
# For a local standalone mongod (NOT replica set), keep retryWrites=false to avoid:
# "Transaction numbers are only allowed on a replica set member or mongos"
MONGODB_URI=mongodb://localhost:27017/bloodconnect?retryWrites=false

# JWT
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-at-least-32-characters
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Mappls API (Required for location services)
# Get your static key from https://apis.mappls.com/console/
MAPPLS_API_KEY=your_mappls_static_key_here

# Rate limiting (tuned for dev)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500

# Twilio (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_EMAIL_FROM=

